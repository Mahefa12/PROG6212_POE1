@model List<CMCS.Models.ClaimModel>

@{
    ViewData["Title"] = "Track Claim Status";
}

<div class="container">
    <h2>Track Your Claim Status</h2>
    <p>Below is a list of your submitted claims and their current status:</p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No claims submitted.</div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Submission Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.FullName</td>
                        <td>@claim.Email</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.TotalAmount</td>
                        <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                        <td>@claim.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
